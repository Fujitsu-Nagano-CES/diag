### NOTE: module load cray-fftw
INC = 
LIB = -L${FFTW_DIR} -lfftw3 -lm
### NOTE: module load cray-fftw cray-netcdf
LIB += -lnetcdff -lnetcdf -lhdf5_hl -lhdf5 #-lz -lcurl -lm

